<%= javascript_pack_tag 'farm' %>
<div class="sidebar">
    <%= render 'shared/display_sidebar' %>
</div>

<div class="page-content">

    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light mb-4 mt-4" style="background-color: #e3f2fd;">
                    <b class="navbar-brand uppercase snapshot-navbar-title"><%= @farm.name %></b>
                    <ul class="navbar-nav ml-auto">
                        <li class="navbar-text">
                            Edit Lab-Based Soil Test
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="row mb-4 px-3">
            <div class="col-12">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row mb-3 ml-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Your Soil Parcels
                            </h5>
                        </div>
                        <div class="row">
                            <%= form_with model: @lab_based_soil_test, url: farm_update_lab_based_soil_test_path(farm_id: @farm.id) do |lab_based_soil_test_form| %>
                                <%= lab_based_soil_test_form.fields_for :soil_parcels do |parcel_form| %>
                                    <%= render 'shared/soil_parcel_fields', f: parcel_form %>
                                <% end %>
                                <%= lab_based_soil_test_form.submit "Submit" %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



