<%= javascript_pack_tag 'farm' %>
<div class="sidebar">
    <%= render 'shared/display_sidebar' %>
</div>

<div class="page-content">

    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light mb-4 mt-4" style="background-color: #e3f2fd;">
                    <b class="navbar-brand uppercase snapshot-navbar-title"><%= @farm.name %></b>
                    <ul class="navbar-nav ml-auto">
                        <li class="navbar-text">
                            Upload and Edit Farm Information
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="row mb-4 px-3">

            <div class="col-4">

                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Carbon
                                <i class="fas fa-industry ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-4">
                                Carbon Balance: <b> <%= @farm.net_emissions %> kg </b>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <div class="col-4">

                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Energy
                                <i class="fas fa-bolt ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-4">
                                Usage: <b> <%= (@farm.total_electricity_use * 0.23314 +
                                               @farm.total_diesel_use * 2.6870514 +
                                               @farm.total_gas_use * 0.18387).round(0) %> kWh </b>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

            <div class="col-4">

                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Nature
                                <i class="fas fa-leaf ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-4">
                                Biodiversity Score: <b> <%= @farm.biodiversity_survey.biodiversity_score.round(2)  %> % </b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4 px-3">
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Soil
                                <i class="fas fa-tree ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_edit_lab_based_soil_test_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-4 edit-link-div">
                                    Lab-Based Soil Test
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

