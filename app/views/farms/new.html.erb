<%= javascript_pack_tag 'farm' %>
<div class="sidebar">
    <%= render 'shared/sidebar' %>
</div>
<div class="page-content">
    <nav class="navbar navbar-expand-lg navbar-light bg-light farm-navbar">
        <ul class="navbar-nav ml-auto">
            <li class="navbar-text mr-2">
                Guest User
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-cog navbar-icon"></i>
                </a>
            </li>
        </ul>
    </nav>
    <div class="container-fluid">
        <div class="card shadow form-card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold card-header-text">Farm Details</h6>
                <h6 class="m-0 font-weight-bold card-header-text">1</h6>
            </div>
            <div class="card-body form-card-body">
                <%= bootstrap_form_with model: @farm, class: "w-100 h-100" do |f| %>
                    <div class="d-flex flex-column justify-content-between h-100">
                        <div>
                            <%= f.text_field :name, label: "Name" %>
                            <%= f.text_field :location, label: "Location" %>
                            <%= f.text_field :latitude, label: "Latitude" %>
                            <%= f.text_field :longitude, label: "Longitude" %>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>
                                <%= link_to "Back", farms_path, class: "btn btn-default btn-danger" %>
                            </div>
                            <div>
                                <%= f.submit "Next", data: { turbolinks: false }, class: "btn btn-default btn-primary" %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>


