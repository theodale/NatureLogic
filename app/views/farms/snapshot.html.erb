<%= render 'shared/farms/sidebar' %>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <%= render 'shared/farms/navbar', section: "Snapshot Overview" %>
            </div>
        </div>
        <div class="row mb-2 snapshot-row">
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body snapshot-card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Carbon
                                <i class="fas fa-industry ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-4">
                                Carbon Balance: <b> <%= @farm.net_emissions %> kg </b>
                            </div>
                        </div>
                        <div class="row px-3 mb-2">
                            <%= column_chart [
                                ["Emissions", @farm.total_emissions],
                                ["Sequestration", @farm.total_sequestration],
                                ["Net", @farm.net_emissions]],
                                height: "200px",
                                library: {
                                    scales: {
                                        yAxes: [{
                                            ticks: {
                                                display: false,
                                            },
                                            gridLines: {
                                                lineWidth: 0,
                                                zeroLineWidth: 3,
                                                zeroLineColor: 'grey',
                                                z: 10
                                            }
                                        }],
                                        xAxes: [{
                                            gridLines: {
                                                display: false
                                            }
                                        }],
                                    },
                                }
                            %>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body snapshot-card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Energy
                                <i class="fas fa-bolt ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-4">
                                Usage: <b> <%= (@farm.total_electricity_use * 0.23314 +
                                               @farm.total_diesel_use * 2.6870514 +
                                               @farm.total_gas_use * 0.18387).round(0) %> kWh </b>
                            </div>
                        </div>
                        <div class="row px-3 mb-2">
                            <%= pie_chart [
                                ["Electricity", @farm.total_electricity_use * 0.23314],
                                ["Diesel", @farm.total_diesel_use * 2.6870514],
                                ["Gas", @farm.total_gas_use * 0.18387]],
                                height: "200px",
                                library: {
                                    legend: {
                                        position: "bottom"
                                    }
                                }
                            %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body snapshot-card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Nature
                                <i class="fas fa-leaf ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Biodiversity Score: <b> <%= @farm.biodiversity_survey.biodiversity_percentage_score %> % </b>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Habitat Score: <b> <%= @farm.defra_habitat_score %> % </b>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Space For Nature Score: <b> <%= @farm.space_for_nature_score %> % </b>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Hedgerows: <b> <%= @farm.length_of_hedgerows %> km </b>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Tree Coverage: <b> <%= @farm.tree_coverage %> % </b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body snapshot-card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Soil
                                <i class="fas fa-tree ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Soil Health Score: <b> <%= @farm.in_field_soil_test.soil_health_score.round(2)  %> % </b>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Mean SOC: <b> <%= @farm.lab_based_soil_test.mean_SOC  %> % </b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body snapshot-card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Sustainability
                                <i class="fas fa-sun ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-3">
                                Sustainable Practices: <b> <%= @farm.sustainability_survey.sustainable_practice_score %> % </b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


