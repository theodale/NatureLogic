<%= render 'shared/farms/sidebar' %>
<div class="page-content">
    <div class="container-fluid d-flex flex-column h-100">
        <div class="row">
            <div class="col-12">
                <%= render 'shared/farms/navbar', section: "Edit Details"  %>
            </div>
        </div>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8 mb-5">
                <%= render 'shared/farms/edit/navbar', section: "Farm" %>
                <div class="row mt-2">
                    <div class="col-12 d-flex justify-content-center px-4">
                        <%= link_to "Details",
                            farm_edit_details_path(@farm),
                            class: "edit-sub-link active" %>
                        <%= link_to "Livestock",
                            farm_edit_livestock_path(@farm),
                            class: "edit-sub-link mx-5" %>
                        <%= link_to "Targets",
                            edit_farm_target_path(@farm),
                            class: "edit-sub-link" %>
                    </div>
                </div>
                <%= bootstrap_form_with model: @farm,
                    url: farm_path(@farm, from_profile: params[:from_profile]),
                    method: :put, class: "w-100 h-100" do |f| %>
                    <div class="shadow farm-edit-form-card pt-4 pb-3 px-4 d-flex
                        flex-column justify-content-between mt-3">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-2"></div>
                                <div class="col-8 mt-3">
                                    <%= f.text_field :name, label: "Name" %>
                                    <%= f.text_field :location, label: "Location" %>
                                    <%= f.text_field :latitude, label: "Latitude" %>
                                    <%= f.text_field :longitude, label: "Longitude" %>
                                </div>
                                <div class="col-2"></div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-5">
                            <% if params[:from_profile] %>
                                <%= link_to farm_profile_path(@farm) do %>
                                    <i class="fas fa-times fa-2x farm-creation-arrow"></i>
                                <% end %>
                            <% else %>
                                <%= link_to edit_farm_path(@farm) do %>
                                    <i class="fas fa-times fa-2x farm-creation-arrow"></i>
                                <% end %>
                            <% end %>
                            <button type="submit" class="btn farm-creation-arrow-button">
                                <i class="fas fa-save fa-2x farm-creation-arrow"></i>
                            </button>
                        </div>
                    </div>
                <% end %>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>
