<%= render 'shared/farms/sidebar' %>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <%= render 'shared/farms/navbar', section: "Edit Farm Details" %>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow form-card">
                    <div class="card-body form-card-body">
                        <%= bootstrap_form_with model: @farm,
                            url: farm_path(@farm, from_profile: params[:from_profile]),
                            method: :put, class: "w-100 h-100" do |f| %>
                            <div class="d-flex flex-column justify-content-between h-100">
                                <div>
                                    <%= f.text_field :name, label: "Name" %>
                                    <%= f.text_field :location, label: "Location" %>
                                    <%= f.text_field :latitude, label: "Latitude" %>
                                    <%= f.text_field :longitude, label: "Longitude" %>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <% if params[:from_profile] %>
                                            <%= link_to "Back",
                                                farm_profile_path(@farm),
                                                class: "btn btn-default btn-danger" %>
                                        <% else %>
                                            <%= link_to "Back",
                                                edit_farm_path(@farm),
                                                class: "btn btn-default btn-danger" %>
                                        <% end %>
                                    </div>
                                    <div>
                                        <%= f.submit "Save Changes", class: "btn btn-default btn-primary" %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
