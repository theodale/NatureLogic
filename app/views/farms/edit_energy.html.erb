<div class="sidebar">
    <%= render 'shared/sidebar' %>
</div>
<div class="page-content">
    <% if @creation %>
    <%= render 'shared/navbar' %>
    <% end %>
    <div class="container-fluid">
        <% if !@creation %>
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light mb-4 mt-4" style="background-color: #e3f2fd;">
                    <b class="navbar-brand uppercase snapshot-navbar-title"><%= @farm.name %></b>
                    <ul class="navbar-nav ml-auto">
                        <li class="navbar-text">
                            Edit Energy Details
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
        <% end %>
                <div class="card shadow form-card">
                    <% if @creation %>
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold card-header-text">Energy Use</h6>
                        <h6 class="m-0 font-weight-bold card-header-text">2</h6>
                    </div>
                    <% end %>
                    <div class="card-body form-card-body">
                        <% if @creation %>
                        <%= bootstrap_form_with model: @farm, url: farm_creation_path(:farm_details, farm_id: @farm.id), method: :put, class: "w-100 h-100" do |f| %>
                        <div class="d-flex flex-column justify-content-between h-100">
                            <div>
                                <%= f.text_field :total_diesel_use, step: :any, label: "Diesel Use (l)" %>
                                <%= f.number_field :total_gas_use, step: :any, label: "Gas Use (kWh)" %>
                                <%= f.number_field :total_electricity_use, step: :any, label: "Electricity Use (kWh)" %>
                                <%= f.hidden_field :farm_id, value: @farm.id %>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div>
                                    <%= link_to "Back", farms_path(farm_id: @farm.id, destroy: true), class: "btn btn-default btn-danger" %>
                                </div>
                                <div>
                                    <%= f.submit "Next", data: { turbolinks: false }, class: "btn btn-default btn-primary" %>
                                </div>
                            </div>
                        </div>
                        <% end %>
                        <% else %>
                        <%= bootstrap_form_with model: @farm, url: farm_path(@farm), method: :put, class: "w-100 h-100" do |f| %>
                            <div class="d-flex flex-column justify-content-between h-100">
                                <div>
                                    <%= f.text_field :total_diesel_use, step: :any, label: "Diesel Use (l)" %>
                                    <%= f.number_field :total_gas_use, step: :any, label: "Gas Use (kWh)" %>
                                    <%= f.number_field :total_electricity_use, step: :any, label: "Electricity Use (kWh)" %>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <%= link_to "Back", edit_farm_path(@farm), class: "btn btn-default btn-danger" %>
                                    </div>
                                    <div>
                                        <%= f.submit "Save Changes", data: { turbolinks: false }, class: "btn btn-default btn-primary" %>
                                    </div>
                                </div>
                            </div>
                        <% end %>
                        <% end %>
                    </div>
                </div>
        <% if !@creation %>
            </div>
        </div>
        <% end %>
    </div>
</div>
