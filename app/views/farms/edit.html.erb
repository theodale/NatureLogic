<%= javascript_pack_tag 'farm' %>
<div class="sidebar">
    <%= render 'shared/display_sidebar' %>
</div>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light mb-4 mt-4" style="background-color: #e3f2fd;">
                    <b class="navbar-brand uppercase snapshot-navbar-title"><%= @farm.name %></b>
                    <ul class="navbar-nav ml-auto">
                        <li class="navbar-text">
                            Upload and Edit Farm Information
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row mb-4 px-3">
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Farm
                                <i class="fas fa-tractor ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_edit_details_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    Details
                                </div>
                            <% end %>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_edit_livestock_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    Livestock
                                </div>
                            <% end %>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_lands_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    Lands
                                </div>
                            <% end %>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_hedgerows_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    Hedgerows
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Energy
                                <i class="fas fa-bolt ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_edit_energy_usage_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    Energy Usage
                                </div>
                            <% end %>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_edit_resources_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    Resource Use
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Nature
                                <i class="fas fa-leaf ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <div class="py-2 px-4 snapshot-value-div mb-4">
                                Biodiversity Score: <b> <%= @farm.biodiversity_survey.biodiversity_score.round(2)  %> % </b>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4 px-3">
            <div class="col-4">
                <div class="card shadow mb-4 snapshot-overview-card">
                    <div class="card-body">
                        <div class="row justify-content-center mb-3">
                            <h5 class="m-0 font-weight-bold text-primary uppercase">
                                Soil
                                <i class="fas fa-tree ml-1"></i>
                            </h5>
                        </div>
                        <div class="row justify-content-center">
                            <%= link_to farm_lab_based_soil_test_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    Lab-Based Soil Test
                                </div>
                            <% end %>
                            <%= link_to farm_in_field_soil_test_path(@farm), class: "edit-link" do %>
                                <div class="py-2 px-4 snapshot-value-div mb-2 edit-link-div">
                                    In-Field Soil Test
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

