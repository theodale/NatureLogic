                                ["Emissions", @farm.total_emissions],
                                ["Sequestration", @farm.sequestration],
                                ["Net", @farm.net_emissions]],
                                min: @farm.sequestration,
                                max: @farm.total_emissions + 10000,
                                height: "200px",
                                library: {
                                    scales: {
                                        yAxes: [{
                                            ticks: {
                                                display: false
                                            },
                                            gridLines: {
                                                display: false
                                            }
                                        }],
                                    },
                                }
                            %>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-4">

                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex justify-content-center">
                        <h6 class="m-0 font-weight-bold text-primary uppercase">Nature</h6>
                    </div>
                    <div class="card-body">

                    </div>
                </div>

            </div>


        </div>

        <div class="row mb-4 px-3">
            <div class="col-4">

                <div class="card shadow">
