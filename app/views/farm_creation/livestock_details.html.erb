<%= javascript_pack_tag 'farm' %>
<div class="sidebar">
    <%= render 'shared/sidebar' %>
</div>
<div class="page-content">
    <%= render 'shared/navbar' %>
    <div class="container-fluid">
        <div class="card shadow form-card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold card-header-text">Livestock Information</h6>
                <h6 class="m-0 font-weight-bold card-header-text">4</h6>
            </div>
            <div class="card-body form-card-body">
                <%= bootstrap_form_with model: @farm, url: wizard_path, method: :put, class: "w-100 h-100" do |f| %>
                    <div class="d-flex flex-column justify-content-between h-100">
                        <div>
                            <%= f.number_field :number_of_sheep, label: "Number of Sheep" %>
                            <%= f.number_field :number_of_cows, label: "Number of Cows" %>
                            <%= f.hidden_field :farm_id, value: @farm.id %>
                            <%= f.hidden_field :farm_id, value: @farm.id %>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>
                                <%= link_to "Back", farm_creation_path(:resource_details, farm_id: @farm.id), class: "btn btn-default btn-danger" %>
                            </div>
                            <div>
                                <%= f.submit "Next", data: { turbolinks: false }, class: "btn btn-default btn-primary" %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>




