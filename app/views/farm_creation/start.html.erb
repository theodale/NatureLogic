<%= render 'shared/farm_creation_sidebar' %>
<div class="page-content">
    <div class="container-fluid">
    <%= render 'shared/navbar' %>
        <div class="card shadow form-card">
            <div class="card-header py-3 d-flex flex-row align-items-center">
                <h6 class="m-0 font-weight-bold card-header-text">Farm Creation Wizard</h6>
            </div>
            <div class="card-body form-card-body">
                <div class="d-flex flex-column justify-content-between h-100">
                    <div>
                        <p>Welcome to the farm creation wizard!</p>
                        <p>It is 17 steps long.</p>
                        <p>Please click begin to start.</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <div>
                            <% if @estate_user %>
                                <%= link_to "Cancel",
                                    estate_path(@estate_user.estate),
                                    class: "btn btn-default btn-danger" %>
                            <% end %>
                        </div>
                        <div>
                            <%= link_to "Begin",
                                wizard_path(:details, farm_id: @farm.id),
                                class: "btn btn-default btn-primary" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




