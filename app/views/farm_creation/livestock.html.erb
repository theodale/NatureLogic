<%= render 'shared/farm_creation/sidebar' %>
<div class="page-content">
    <div class="container-fluid">
        <%= render 'shared/farm_creation/navbar' %>
        <div class="card shadow form-card">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold card-header-text">Livestock Information</h6>
                <h6 class="m-0 font-weight-bold card-header-text">4 / 13</h6>
            </div>
            <div class="card-body form-card-body">
                <%= bootstrap_form_with model: @farm,
                    url: wizard_path(:livestock, **farm_and_estate_ids),
                    method: :put,
                    class: "w-100 h-100" do |f| %>
                    <div class="d-flex flex-column justify-content-between h-100">
                        <div>
                            <%= f.number_field :number_of_sheep, label: "Number of Sheep" %>
                            <%= f.number_field :number_of_cows, label: "Number of Cows" %>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div>
                                <%= link_to "Back",
                                    wizard_path(:resources, **farm_and_estate_ids),
                                    class: "btn btn-default btn-danger" %>
                            </div>
                            <div>
                                <%= f.submit "Next",
                                    class: "btn btn-default btn-primary" %>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>




