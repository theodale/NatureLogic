<% if @creation %>
<%= render 'shared/farm_creation/sidebar' %>
<% else %>
<%= render 'shared/farms/sidebar' %>
<% end %>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <% if @creation %>
                <%= render 'shared/farm_creation/navbar' %>
                <% else %>
                <%= render 'shared/farms/navbar', section: "Edit Hedgerows" %>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card shadow form-card">
                    <% if @creation %>
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold card-header-text">Hedgerows</h6>
                        <h6 class="m-0 font-weight-bold card-header-text">6 / 13</h6>
                    </div>
                    <% end %>
                    <div class="card-body form-card-body d-flex flex-column justify-content-between">
                        <div class="overflow-auto">
                            <div class="row">
                                <div class="col-12">
                                    <% if @farm.hedgerows.size > 0 %>
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Hedgerow ID</th>
                                                <th scope="col">Hedgerow Type</th>
                                                <th scope="col">Length (km)</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% @farm.hedgerows.each do |hedgerow| %>
                                            <tr>
                                                <td><%= hedgerow.id %></td>
                                                <td><%= hedgerow.hedgerow_type.category %></td>
                                                <td><%= hedgerow.length %></td>
                                                <td>
                                                    <%= link_to farm_hedgerow_path(@farm, hedgerow, creation: @creation), method: :delete do %>
                                                        <button type="button" class="btn btn-danger">Delete</button>
                                                    <% end %>
                                                </td>
                                            </tr>
                                            <% end %>
                                        </tbody>
                                    </table>
                                    <% else %>
                                    <div class="alert alert-primary" role="alert">
                                        You have no Hedgerows.
                                    </div>
                                    <% end %>
                                </div>
                                <div class="col-12 mb-4">
                                    <%= link_to new_farm_hedgerow_path(@farm, creation: @creation) do %>
                                        <button type="button" class="btn btn-success">Add New Hedgerow</button>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="row">
                                <div class="col-12 d-flex justify-content-between">
                                    <% if @creation %>
                                    <div>
                                        <%= link_to "Back",
                                            farm_creation_path(:lands, farm_id: @farm.id),
                                            class: "btn btn-default btn-danger" %>
                                    </div>
                                    <div>
                                        <%= link_to "Next",
                                            farm_creation_path(:biodiversity_surveys, farm_id: @farm.id),
                                            class: "btn btn-default btn-primary" %>
                                    </div>
                                    <% else %>
                                    <div>
                                        <%= link_to "Back",
                                            edit_farm_path(@farm),
                                            class: "btn btn-default btn-danger" %>
                                    </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

