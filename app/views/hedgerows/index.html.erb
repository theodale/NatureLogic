<% if @creation %>
<%= render 'shared/farm_creation/sidebar' %>
<% else %>
<%= render 'shared/farms/sidebar' %>
<% end %>
<div class="page-content">
    <div class="container-fluid d-flex flex-column h-100">
        <div class="row">
            <div class="col-12">
                <% if @creation %>
                <%= render 'shared/farm_creation/navbar' %>
                <% else %>
                <%= render 'shared/farms/navbar', section: "Edit Lands" %>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <ul class="nav d-flex flex-column mt-3 creation-step-nav align-items-center">
                    <li class="nav-item mt-3">
                        <%= link_to "Start",
                            farm_creation_path(:start, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Details",
                            farm_creation_path(:details, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Energy",
                            farm_creation_path(:energy, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Resources",
                            farm_creation_path(:resources, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Livestock",
                            farm_creation_path(:livestock, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Land Parcels",
                            farm_creation_path(:lands, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Hedgerows",
                            farm_creation_path(:hedgerows, farm_id: @farm.id),
                            class: "creation-link-active" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Biodiversity",
                            farm_creation_path(:biodiversity_surveys, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Sustainability",
                            farm_creation_path(:sustainability_surveys, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-3">
                        <%= link_to "Targets",
                            farm_creation_path(:targets, farm_id: @farm.id),
                            class: "creation-link" %>
                    </li>
                    <li class="nav-item mt-5 mb-3">
                        <%= link_to "Skip",
                            farm_snapshot_path(
                                farm_id: @farm.id,
                                skip_creation: true),
                            class: "skip-creation-link" %>
                    </li>
                </ul>
            </div>
            <div class="col-10 pr-5">
                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10">
                        <div class="farm-creation-form-header mt-3 mb-3 py-2 pl-4">
                            Hedgerows
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
                <div class="row no-gutters">
                    <div class="col-1"></div>
                    <div class="col-10">
                        <div class="shadow farm-creation-form-card pt-4 pb-3 px-4 d-flex
                            flex-column justify-content-between">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-12">
                                        <% if @farm.hedgerows.size > 0 %>
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th class="align-text-center">ID</th>
                                                    <th class="align-text-center">Type</th>
                                                    <th class="align-text-center">Length (km)</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody class="grey-text">
                                                <% @farm.hedgerows.each do |hedgerow| %>
                                                <tr>
                                                    <td class="align-text-center"><%= hedgerow.id %></td>
                                                    <td class="align-text-center"><%= hedgerow.hedgerow_type.category[0,15] %></td>
                                                    <td class="align-text-center"><%= hedgerow.length %></td>
                                                    <td class="align-text-center">
                                                        <%= link_to edit_farm_hedgerow_path(@farm, hedgerow, creation: @creation),
                                                            class: "edit-land-link" do %>
                                                            <i class="fas fa-edit fa-lg"></i>
                                                        <% end %>
                                                    </td>
                                                    <td class="align-text-center">
                                                        <%= link_to farm_hedgerow_path(@farm, hedgerow, creation: @creation),
                                                            method: :delete, class: "delete-link" do %>
                                                            <i class="fas fa-trash fa-lg"></i>
                                                        <% end %>
                                                    </td>
                                                </tr>
                                                <% end %>
                                            </tbody>
                                        </table>
                                        <% else %>
                                        <div class="alert alert-primary" role="alert">
                                            You have no Hedgerows.
                                        </div>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-between">
                                <% if @creation %>
                                    <%= link_to farm_creation_path(:lands, **farm_and_estate_ids) do %>
                                        <i class="fas fa-arrow-left fa-2x farm-creation-arrow"></i>
                                    <% end %>
                                    <%= link_to "Add Hedgerow",
                                        new_farm_hedgerow_path(@farm, creation: @creation),
                                        class: "add-parcel-link" %>
                                    <%= link_to farm_creation_path(:biodiversity_surveys, **farm_and_estate_ids) do %>
                                        <i class="fas fa-arrow-right fa-2x farm-creation-arrow"></i>
                                    <% end %>
                                <% else %>
                                    <%= link_to "Back",
                                        edit_farm_path(@farm),
                                        class: "btn btn-default btn-danger" %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                    <div class="col-1"></div>
                </div>
            </div>
        </div>
    </div>
</div>
