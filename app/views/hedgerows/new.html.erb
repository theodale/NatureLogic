<% if @creation %>
<div class="sidebar">
    <%= render 'shared/sidebar' %>
</div>
<% else %>
<div class="sidebar">
    <%= render 'shared/display_sidebar' %>
</div>
<% end %>
<div class="page-content">
    <% if @creation %>
    <%= render 'shared/navbar' %>
    <% end %>
    <div class="container-fluid">
        <% if !@creation %>
        <div class="row">
            <div class="col-12">
                <nav class="navbar navbar-expand-lg navbar-light mb-4 mt-4" style="background-color: #e3f2fd;">
                    <b class="navbar-brand uppercase snapshot-navbar-title"><%= @farm.name %></b>
                    <ul class="navbar-nav ml-auto">
                        <li class="navbar-text">
                            Add New Hedgerow
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
        <% end %>
                <div class="card shadow form-card">
                    <% if @creation %>
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold card-header-text">Create New Hedgerow</h6>
                    </div>
                    <% end %>
                    <div class="card-body form-card-body">
                    <%= bootstrap_form_with model: @hedgerow, url: farm_hedgerows_path(@farm, creation: @creation), method: :post, class: "w-100 h-100" do |f| %>
                        <div class="d-flex flex-column justify-content-between h-100">
                            <div>
                                <%= f.collection_select :hedgerow_type_id, HedgerowType.all, :id, :category, {label: "Hedgerow Type"} %>
                                <%= f.number_field :length, label: "Length (km)"%>
                            </div>
                            <div>
                                <div class="row">
                                    <div class="col-12 d-flex justify-content-between">
                                        <div>
                                            <%= link_to "Back", farm_hedgerows_path(@farm, creation: @creation), class: "btn btn-default btn-danger" %>
                                        </div>
                                        <div>
                                            <%= f.submit "Create Hedgerow", class: "btn btn-default btn-primary" %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>
        <% if !@creation %>
            </div>
        </div>
        <% end %>
    </div>
</div>
