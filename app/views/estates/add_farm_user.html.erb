<%= render 'shared/estates/sidebar' %>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <%= render 'shared/estates/navbar' %>
            </div>
        </div>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="card farms-card shadow">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold card-header-text">Add Farm Account</h6>
                    </div>
                    <div class="card-body">
                        <%= bootstrap_form_with model: @farm_user,
                            url: estate_add_farm_user_path(farm_id: @farm.id),
                            class: "w-100 h-100" do |f| %>
                            <div class="d-flex flex-column justify-content-between h-100">
                                <div>
                                    <p>Email</p>
                                    <%= f.email_field :email, hide_label: true,
                                            autofocus: true, autocomplete: "email" %>
                                    <p>Password (6 characters minimum)</p>
                                    <%= f.password_field :password, hide_label: true,
                                            autocomplete: "new-password" %>
                                    <p>Password Confirmation</p>
                                    <%= f.password_field :password_confirmation, hide_label: true,
                                            autocomplete: "new-password" %>
                                </div>
                                <div>
                                    <%= f.submit "Create", class: "btn btn-info" %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>




