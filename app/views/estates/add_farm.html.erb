<%= render 'shared/estates/sidebar', page: "settings" %>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <%= render 'shared/estates/navbar' %>
            </div>
        </div>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <%= render 'shared/estates/settings/navbar', section: "farms" %>
                    </div>
                    <div class="col-2"></div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <%= bootstrap_form_with model: @farm,
                            url: farms_path(estate: true) do |f| %>
                            <div class="form-card purple shadow mb-5 p-4
                                fluid-container d-flex flex-column justify-content-between">
                                <div class="row">
                                    <div class="col-2"></div>
                                    <div class="col-8">
                                        <h4 class="estate-farms-card-header my-2">Create New Farm</h4>
                                        <%= f.text_field :name, label_class: "form-label my-3" %>
                                        <%= f.text_field :location, label_class: "form-label my-3" %>
                                        <%= f.text_field :postcode, label_class: "form-label my-3" %>
                                        <%= f.text_field :region, label: "Region/County", label_class: "form-label my-3" %>
                                        <%= f.select :farm_type, ["Arable", "Livestock", "Woodland", "Mixed"],
                                            {label_class: "form-label my-3"} %>
                                    </div>
                                    <div class="col-2"></div>
                                </div>
                                <div class="d-flex justify-content-between mt-5">
                                    <%= link_to estate_settings_farms_path(@estate) do %>
                                        <i class="fas fa-times-circle fa-2x farm-creation-arrow"></i>
                                    <% end %>
                                    <button type="submit" class="btn farm-creation-arrow-button">
                                        <i class="fas fa-save fa-2x farm-creation-arrow"></i>
                                    </button>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>

