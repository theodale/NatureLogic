<%= render 'shared/estates/sidebar' %>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <%= render 'shared/estates/navbar' %>
            </div>
        </div>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="card farms-card shadow">
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold card-header-text">Add New Farm</h6>
                    </div>
                    <div class="card-body">
                        <%= bootstrap_form_with model: @farm,
                            url: farms_path(estate: true),
                            class: "w-100 h-100" do |f| %>
                            <div class="d-flex flex-column justify-content-between h-100">
                                <div>
                                    <%= f.text_field :name %>
                                    <%= f.text_field :location %>
                                    <%= f.text_field :latitude %>
                                    <%= f.text_field :longitude %>
                                </div>
                                <div>
                                    <%= f.submit "Submit", class: "btn btn-info" %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>





