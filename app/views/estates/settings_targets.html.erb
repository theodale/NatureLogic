<%= render 'shared/estates/sidebar', page: "settings" %>
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <%= render 'shared/estates/navbar' %>
            </div>
        </div>
        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="row">
                    <div class="col-2"></div>
                    <div class="col-8">
                        <%= render 'shared/estates/settings/navbar', section: "targets" %>
                    </div>
                    <div class="col-2"></div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <%= bootstrap_form_with model: @target,
                            url: estate_target_path(@estate, estate: true),
                            method: :put, class: "w-100 h-100" do |f| %>
                            <div class="naturelogic-card purple shadow mb-5 d-flex p-4 d-flex
                                flex-column justify-content-between">
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-2"></div>
                                            <div class="col-8 mt-3">
                                                <% if params[:updated] %>
                                                <div class="alert alert-success alert-dismissible" role="alert">
                                                    Targets updated!
                                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <% end %>
                                                <%= f.number_field :net_carbon_emission, step: :any,
                                                label: "Net Carbon Emission (kg)" %>
                                                <%= f.number_field :mean_SOC, step: :any, label: "Mean SOC"%>
                                                <%= f.number_field :soil_health, step: :any %>
                                                <%= f.number_field :nature_positive_areas, step: :any %>
                                                <%= f.number_field :sustainable_practices, step: :any %>
                                            </div>
                                            <div class="col-2"></div>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-end mt-5">
                                        <button type="submit" class="btn farm-creation-arrow-button">
                                            <i class="fas fa-save fa-2x farm-creation-arrow"></i>
                                        </button>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>

