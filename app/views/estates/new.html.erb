<div class="home-background">
    <div class="container">
        <div class="row home-background">
            <div class="col-2"></div>
            <div class="col-8">
                <div class="card home-card container">
                    <div class="row h-100">
                        <div class="col-6">
                            <div class="d-flex h-100 align-items-center">
                                <div class="w-100">
                                    <div class="d-flex justify-content-center mb-4">
                                        <h1 class="home-text-green">NatureLogic</h1>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <img src="/pilio-logo.png" class="home-logo"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex h-100 mt-5">
                                <div class="container">
                                    <div class="col-12">
                                      <h5 class="home-text-green mb-3">Enter Estate Name</h5>
                                        <%= bootstrap_form_with model: @estate do |f| %>
                                            <h1><%= @estate.id %></h1>
                                            <%= f.text_field :name %>
                                            <%= f.text_field :location %>
                                            <%= f.number_field :carbon_price %>
                                            <%= f.fields_for :target do |tf| %>
                                                <%= tf.number_field :net_carbon_emission, step: :any,
                                                    label: "Net Carbon Emission (kg)" %>
                                                <%= tf.number_field :mean_SOC, step: :any, label: "Mean SOC"%>
                                                <%= tf.number_field :soil_health_score, step: :any %>
                                                <%= tf.number_field :ecological_focus_area, step: :any %>
                                                <%= tf.number_field :sustainable_practices, step: :any %>
                                                <%= tf.hidden_field :estate_id, value: @estate.id %>
                                            <% end %>
                                            <%= f.submit "Submit", class: "btn btn-info" %>
                                        <% end %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-2"></div>
        </div>
    </div>
</div>


